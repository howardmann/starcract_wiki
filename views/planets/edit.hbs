<h3>Edit Planet: {{planet.name}}</h3>

<fieldset>
  <legend>Edit Planet Form</legend>

  <form action="/planets/{{planet.id}}" method="post">
    <input type="hidden" name="_method" value="PUT">

    <p>Name</p>
    <p><input type="name" name="name" value="{{planet.name}}" required=true></p>

    <p>Description</p>
    <p><input type="text" name="description" value="{{planet.description}}" required=true></p>
    <p>{{planet.race.name}}</p>
    <p>Pick race</p>
    <p>
      <select name="race_id">
        {{#each races}}
          <option value="{{id}}" {{#if isRace}}selected="selected"{{/if}}>{{name}}</option>
        {{/each}}
      </select>
    </p>

    <p><input type="submit"></p>

  </form>
</fieldset>

<a href="/planets">Back to planets</a>
